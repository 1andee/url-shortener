<%- include('partials/_header') %>

    <div class="container">
      <% if (user_id) { %>
      <h3>Your Unique Short URL</h3>
      <a href="../u/<%= shortURL %>" target="_blank"><h3><%= shortURL %></h3></a>
      <b><%= longURL %></b>
      <br>
      <br>
      <b>Date created:</b> <%= date %>
    </div>
    <br>
    <div class="container">
      <a name="stats"><h4>Statistics</h4></a>
      <b>Total Clickthroughs</b>: <%= clickthroughs %>
      <br>
      <b>Unique Visitors</b>:
    </div>
    <br>
    <div class="container">
      <h4>Update</h4>
      <p>
        <form method="POST" class="form-inline" action="/urls/<%= shortURL %>?_method=PUT">
          <input type="text" style="width: 50%;" class="form-control" id="newURL" name="newURL" placeholder="<%= longURL %>">
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </p>
    </div>
      <br>
      <br>
    <div class="container">
      <p>
        <a href="/urls"><button type="text" class="btn btn-primary form-inline">Back</button></a>
        <form method="POST" action="/urls/<%= shortURL %>?_method=DELETE">
          <input type="submit" class="btn btn-danger form-inline" value="Delete this Short URL" />
        </form>
      </p>
    </div>
      <% } %>

      <% if (!user_id) { %>
        Register or login above!
      <% } %>
    </div>
  </body>
</html>
